<thlogic>

    <attr sel="#top-nav"
          th:replace="~{fragments/template::top-nav}" />

    <attr sel="#head"
          th:replace="~{fragments/template::head('Monthly groceries')}" />

    <attr sel="#layoutSidenav_nav"
          th:replace="~{fragments/template::layoutSidenav_nav}" />

    <attr sel=".monthlyGroceryList"
          th:each="monthlyGrocery:${__${T(com.mpholo.project.grocery.util.MonthlyGroceryAttributeNames).MONTHLY_GROCERY_LIST}__}" />

    <attr sel=".monthlyGroceryMonth"
          th:text="${monthlyGrocery.period}" />

    <attr sel=".dates"
          th:text="${monthlyGrocery.startDate+' - '+monthlyGrocery.endDate}" />

    <attr sel=".budget"
          th:text="${'Budget R '+#numbers.formatDecimal(monthlyGrocery.budgetAmount,3,2)}" />

    <attr sel="#groceryYear"
          th:text="${'Monthly Groceries- '+year}" />

    <attr sel="#card-header-id"
          th:id="${'heading'+monthlyGroceryStat.count}" />

    <attr sel="#collapse-id"
          th:id="${'collapse'+monthlyGroceryStat.count}"
          th:attr="aria-labelledby=${'heading'+monthlyGroceryStat.count}"
          th:classappend="${monthlyGroceryStat.count == 1} ? 'show' : '' "      />

    <attr sel=".collapse-attr"
          th:attr="data-target=${'#collapse'+monthlyGroceryStat.count},aria-controls=${'collapse'+monthlyGroceryStat.count}" />

    <attr sel="#footer"
          th:replace="~{fragments/template::footer('monthlyGroceries')}" />

    <attr sel=".deleteMonthlyGroceries"
          th:href="@{__${T(com.mpholo.project.grocery.util.MonthylGroceryMappings).MONTHLY_GROCERY_DELETE}__(monthlyGroceryId=${monthlyGrocery.monthlyGroceryId})}" />

    <attr sel=".viewMonthlygrocery"
          th:href="@{__${T(com.mpholo.project.grocery.util.GroceryItemMappings).GROCERY_ITEM_REDIRECT_LIST}__(monthlyGroceryId=${monthlyGrocery.monthlyGroceryId})}" />

    <attr sel=".data"
          th:text="${monthlyGrocery.monthlyGroceryId +','+monthlyGrocery.period+','
                   +monthlyGrocery.startDate+','+monthlyGrocery.endDate+','
                   +monthlyGrocery.budgetAmount}" />


    <!--form fields-->
    <attr sel="#saveMonthlyGrocery"
          th:action="@{__${T(com.mpholo.project.grocery.util.MonthylGroceryMappings).MONTHLY_GROCERY_SAVE}__}"
          th:object="${monthlyGrocery}" />

    <attr sel="#formMonmthlyGroceryId"
          th:field="${monthlyGrocery.monthlyGroceryId}" />

    <attr sel="#formperiod"
          th:field="${monthlyGrocery.period}" />

    <attr sel="#formStartDate"
          th:field="${monthlyGrocery.startDate}" />

    <attr sel="#formEndDate"
          th:field="${monthlyGrocery.endDate}" />

    <attr sel="#formbudget"
          th:field="${monthlyGrocery.budgetAmount}" />


</thlogic>