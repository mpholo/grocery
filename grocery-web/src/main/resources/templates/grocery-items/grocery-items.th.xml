<thlogic>

    <attr sel="#top-nav"
          th:replace="~{fragments/template::top-nav}" />

    <attr sel="#layoutSidenav_nav"
          th:replace="~{fragments/template::layoutSidenav_nav}" />

    <attr sel="#head"
          th:replace="~{fragments/template::head('Groceries items')}" />

    <attr sel="#delete-confirmation"
          th:replace="~{fragments/delete-confirmation::delete-confirmation}" />

    <attr sel="#footer"
          th:replace="~{fragments/template::footer('groceryItem')}" />

    <attr sel="#btn-back"
          th:href="@{__${T(com.mpholo.project.grocery.util.MonthylGroceryMappings).MONTHLY_GROCERY_REDIRECT_LIST}__}" />

    <attr sel=".deleteUrl"
          th:href="@{__${T(com.mpholo.project.grocery.util.GroceryItemMappings).GROCERY_ITEM_DELETE}__(groceryItemId=${groceryItem.groceryItemId},monthGroceryId=${groceryItem.monthlyGrocery.monthlyGroceryId})}" />

    <attr sel="#monthlyGrocery"
          th:text="${'Monthly Grocery - ' + monthlyGrocery.period}" />

    <attr sel=".groceryItems"
          th:each="groceryItem:${__${T(com.mpholo.project.grocery.util.GroceryItemAttributeNames).GROCERY_ITEM_LIST}__}" />

    <attr sel=".groceryItemId"
          th:value="${groceryItem.groceryItemId}" />

    <attr sel=".groceryItemName"
          th:text="${groceryItem.product.productName}" />

    <attr sel=".groceryItemDesc"
          th:text="${groceryItem?.product?.productDescription}" />

    <attr sel=".estimatedPrice"
          th:text="${#numbers.formatDecimal(groceryItem.actualPrice,2,2)}" />

    <attr sel=".quantity"
          th:text="${groceryItem.quantity}" />

    <attr sel=".totalPriceQuantity"
          th:text="${#numbers.formatDecimal(groceryItem.actualPrice * groceryItem.quantity,2,2)}" />

    <attr sel="#totalPrice"
          th:text="${#numbers.formatDecimal(__${T(com.mpholo.project.grocery.util.GroceryItemAttributeNames).TOTAL_PRICE}__,2,2)}" />

    <attr sel="#totalQuantity"
          th:text="${__${T(com.mpholo.project.grocery.util.GroceryItemAttributeNames).TOTAL_QUANTITY}__}" />

    <attr sel="#finalPrice"
          th:text="${#numbers.formatDecimal(__${T(com.mpholo.project.grocery.util.GroceryItemAttributeNames).FINAL_TOTAL_PRICE}__,2,2)}" />

    <attr sel=".productId"
          th:value="${groceryItem.product.productId}" />

    <attr sel="#exporitems"
          th:href="@{__${T(com.mpholo.project.grocery.util.GroceryItemMappings).GROCERY_ITEMS_EXPORT}__(monthGroceryId=${monthlyGrocery.monthlyGroceryId})}" />

<!--form fields-->

    <attr sel="#saveGroceryItem"
          th:action="@{__${T(com.mpholo.project.grocery.util.GroceryItemMappings).GROCERY_ITEM_SAVE}__}"
          th:object="${groceryItem}" />


    <attr sel="#monthlyGroceryId"
          th:field="${monthlyGrocery.monthlyGroceryId}" />

    <attr sel="#groceryItemId"
          th:field="${groceryItem.groceryItemId}" />

    <attr sel="#formPrice"
          th:field="${groceryItem.actualPrice}" />

    <attr sel="#formproduct"
          th:field="*{productId}" />

    <attr sel="#formQuantity"
          th:field="*{quantity}" />

    <attr sel=".formProductList"
          th:each="product:${__${T(com.mpholo.project.grocery.util.ProductAttributeNames).PRODUCT_LIST}__}"
          th:value="${product.productId}"
          th:text="${product.productName}"
          th:attr="data-price=${product.productPrice}"
    />




</thlogic>